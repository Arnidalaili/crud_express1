<%- include ../templates/adminlte/header-top-nav.ejs %>
<!-- Full Width Column -->
<div class="content-wrapper">
  <div class="container">
    <br>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Tambah Data User
        <small>Create Data User</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/user"></i> Data User</a></li>
        <li class="active"> Tambah</li>
      </ol>
    </section>

    <section class="content">
      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title">Tambah Data User</h3>
        </div>
        <div class="box-body">
          <form action="/user/create" method="post">
            <div class="form-group">
              <label for="nama"> Nama :</label>
              <input type="text" value="<%= data.nama %>" class="form-control" name="nama" id="nama" required />
            </div>
            <div class="form-group">
              <label for="username"> Username :</label>
              <input type="text" value="<%= data.username %>" class="form-control" name="username" id="username"
                required />
            </div>
            <div class="form-group">
              <label for="password"> Password :</label>
              <input type="text" value="<%= data.password %>" class="form-control" name="password" id="password" required />
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>

<%- include ../templates/adminlte/footer.ejs %>